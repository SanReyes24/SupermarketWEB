@page
@model SupermarketWEB.Pages.Customers.IndexModel
@{
	ViewData["Title"] = "Index Customers";
}

<h1>Index Customers</h1>

<p>
	<a asp-page="Create" class="btn btn-success"> Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Customers[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Customers[0].Identification)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Customers[0].Observation)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Customers)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Identification)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Observation)
				</td>
				
				<td>
					<span></span>
				</td>
			</tr>
		}
	</tbody>
</table>
